{
  "name": "example-express-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/example-express-app/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build-devenvironment": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx ./scripts/setup-environment.ts",
        "cwd": "apps/example-express-app"
      }
    },
    "fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint --fix ./src && prettier --write -c ./src",
        "cwd": "apps/example-express-app"
      }
    },
    "pre-lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p ./tsconfig.app.json & prettier -c ./src",
        "cwd": "apps/example-express-app"
      }
    },
    "lint": {
      "dependsOn": ["pre-lint"],
      "executor": "@nx/eslint:lint"
    },
    "serve": {
      "dependsOn": ["build-devenvironment"],
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "example-express-app:build",
        "inspect": true
      },
      "configurations": {
        "development": {
          "buildTarget": "example-express-app:build:development"
        },
        "production": {
          "buildTarget": "example-express-app:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/example-express-app/jest.config.ts"
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/example-express-app/Dockerfile . -t example-express-app"
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventionalcommits"
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "dependsOn": ["build", "^build"],
      "options": {
        "command": "node --env-file=apps/example-express-app/.env ./dist/apps/example-express-app/main.js"
      }
    }
  }
}
