{
  "name": "say-hello",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/say-hello/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/say-hello",
        "main": "packages/say-hello/src/index.ts",
        "tsConfig": "packages/say-hello/tsconfig.lib.json",
        "assets": ["packages/say-hello/*.md"]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/packages/say-hello"
      }
    }
  }
}
